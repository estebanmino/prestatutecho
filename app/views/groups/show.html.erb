<p id="notice"><%= notice %></p>

<div class="container-fluid">

<div class="row">
  <div class="col-xs-6 col-md-6 col-lg-6">

    <h2>
      <strong>Grupo:</strong>
      <%= @group.name %>
    </h2>

    <h3> Miembros: <%= @group.users.count %></h3>
    <h3> Ubicación: <%= @group.address %></h3>

    <h3> Tiempo de Recuperación: <%= @group.recovery_time %> meses</h3>
    <h3> Inversión Total: <%= number_to_currency_ch(@group.total_investment) %></h3>
    <h3> Inversión Mínima: <%= number_to_currency_ch(@group.minimal_investment) %></h3>

    <%= link_to 'Unirse!', join_group_path(@group) %>

    <% if @group.host_id == current_user.id %>
    <%= link_to 'Edit', edit_group_path(@group) %> |
    <% end %>
    <%= link_to 'Back', groups_path %>

  </div>

  <div class="col-xs-6 col-md-6 col-lg-6 text-center">


    <div style='width: 800px;'>
      <div id="map" style='width: 800px; height: 400px;'></div>
    </div>
  </div>










<script type="text/javascript">

handler = Gmaps.build('Google');
handler.buildMap({ provider: { mapTypeId: google.maps.MapTypeId.SATELLITE},
                               internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});

</script>
